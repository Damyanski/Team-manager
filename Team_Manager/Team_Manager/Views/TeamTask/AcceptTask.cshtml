@model Int32

<div class="container-fluid well" id="border">
    @using (Html.BeginForm("AcceptTask", "TeamTask", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <h1>Are you sure you want to accept this task?</h1>
        <input type="number" value=@this.Model hidden="hidden" name="taskId"/>
        <input type="submit" value="Yes" class="btn btn-default btn-success"/>
        @Html.ActionLink("No", "MyTasks", "TeamTask", null, new {@class = "btn btn-default btn-danger"})
    }
</div>

@model IEnumerable<Team_Manager.Services.Data.ViewModels.TeamViewModel>
@{
    int row = 1;
}
<div class="bs-docs-section container-fluid well" id="border">

    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1 id="tables" class="fredoka">My Teams</h1>
            </div>

            <div class="bs-component">
                <table class="table table-striped table-hover fredoka">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Team Name</th>
                            <th>Category</th>
                            <th>SubCategory</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var team in this.Model)
                    {
                        <tr class="success hoverClick menu-button fredoka">
                            <td>@row</td>
                            <td>@team.Name</td>
                            <td>@team.Category</td>
                            <td>@team.SubCategory</td>
                        </tr>
                        <tr class="active menu hoverClick fredoka">
                            <td><a>@Html.ActionLink("Creator", null, null, null, null)</a></td>
                            <td><a>@Html.ActionLink("Topics", "TeamTopics", "Team", new { teamId = team.Id }, null)</a></td>
                            <td><a>@Html.ActionLink("Tasks", "AllTasksOfTeam", "TeamTask", new { teamId = team.Id }, null)</a></td>
                            <td>@Html.ActionLink("Members", "TeamMembers", "Team", new { teamId = team.Id }, null)</td>
                            <td>@Html.ActionLink("Visit Team Page", "ShowTeam", "Team", new {teamId = team.Id}, null )</td>
                        </tr>
                        row++;
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
